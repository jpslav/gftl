<div id="pageHeading">Races</div>

<% if @races.nil? || @races.empty? %>

There are no races in the system yet.  <%= link_to 'Add one now!', new_race_path %>

<% else %>

<table id="list">
  <tr>
    <th width="40%">Name</th>
    <th width="30%">Track</th>
	<th width="30%">Date</th>
    <th colspan="3"></th>
  </tr>

<% rowtype = "evenrow"%>
<% @races.each do |race| %>
  <tr class="<%= rowtype %>">
    <td><%=h race.name %></td>
    <td><%=h race.track.name %></td>
	<td><%=h race.standardRaceTimeString %> ET</td>
    <td><%= link_to show_icon, race %></td>
    <td><%= link_to edit_icon, edit_race_path(race) %></td>
    <td><%= link_to trash_icon, race, 
			:confirm => 'Are you sure you want to delete ' + race.name + "?", 
			:method => :delete %></td>
  </tr>
  <% rowtype = "oddrow" == rowtype ? "evenrow" : "oddrow" %>
<% end %>
</table>

<br />

<%= link_to 'Add a new race', new_race_path %>

<% end %>