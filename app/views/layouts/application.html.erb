<!DOCTYPE html PUBLIC "-//W3C/DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
	<title><%= "GFTL Fantasy NASCAR" + (@page_subtitle ? " - " + @page_subtitle : "")%></title>
	
	<!-- YUI CSS-->
	
    <link rel="stylesheet" 
          type="text/css" 
          href="http://yui.yahooapis.com/2.2.2/build/menu/assets/menu.css">
    
    <!-- YUI Dependencies --> 
    
    <script type="text/javascript"           
            src="http://yui.yahooapis.com/2.2.2/build/yahoo-dom-event/yahoo-dom-event.js">
    </script>
    <script type="text/javascript" 
            src="http://yui.yahooapis.com/2.2.2/build/container/container_core-min.js">
    </script>
    
    <!-- YUI Source File -->
    
    <script type="text/javascript" 
            src="http://yui.yahooapis.com/2.2.2/build/menu/menu-min.js">
    </script>

    <!-- Progress Tracker CSS -->
	
	<%= stylesheet_link_tag "yui_menubar_overrides", :media => "all"%>
	<%= stylesheet_link_tag "gftl", :media => "all"%>

    <% if @includePrototype && @includePrototype = true %>
        <%= javascript_include_tag "prototype" %>
    <% end %>
	
	<%= javascript_include_tag :defaults %>
	
	<!-- Initialize and render the menu bar --> 
	
	<script type="text/javascript">
	   onMenuBarReady = function() {
	       var oMenuBar = new YAHOO.widget.MenuBar("mainCategory", 
	           { autosubmenudisplay:true, hidedelay:100, lazyload:false });
           oMenuBar.render();
       };

       // Initialize and render the menu bar when it is available in the DOM
       YAHOO.util.Event.onContentReady("mainCategory", onMenuBarReady);
    </script> 	
</head>

<body>
	<div id="body">
		<div id="banner">
			<span class="floatRight">
				<table>
					<tr id="loginStatus">
						<td><% if user_signed_in? %>
				    Welcome, <%= current_user.first_name %> &nbsp;&nbsp;&nbsp;
					[ <%= link_to "Log out", destroy_user_session_path %> ]

				    <% else %>
				    [ <%= link_to "Log in", new_user_session_path %> ]
				    <% end %></td>
					</tr>
					<!--
					<tr id="loginStatus">
						
						<td>
						<% if user_signed_in? %>
						<% membership = current_user.current_league_membership %>
						  <% if !membership.nil? %>
						    You're playing as '<%= membership.owner.name %>' in '<%= membership.league.name %>' [ <%= link_to "Change", league_memberships_path %> ]
						  <% end %>
						<% end %>
						</td>
						</tr> -->
				</table>
			
			</span>
			<img src="/images/gftl_banner2.gif"/>
		</div>
		
        <!-- Navigation menu bar -->

        <% if user_signed_in? %>
        <div id="mainCategory" class="yuimenubar">
            <div class="bd">
                <ul class="first-of-type">
                    <li class="yuimenubaritem first-of-type">
                        <%= link_to "Home", root_path%>
                    </li>
                    <li class="yuimenubaritem">
                        <%= link_to "Rules", :controller => 'rules', :action => 'index'%>
                    </li>
                    <li class="yuimenubaritem">League
                        <div id="league" class="yuimenu">
                            <div class="bd">
                                <ul>
									<li class="yuimenuitem">
				                        <%= link_to "League Memberships", 
										    :controller => 'league_memberships', 
											:action => 'index' %>
				                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Active League Details', 
											:controller => 'league_details', 
											:action => 'index'%>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li> 
			        <li class="yuimenubaritem">
			            <%= link_to "Owner's Box", :controller => 'owners', :action => "index"%>
			        </li>
			        <li class="yuimenubaritem">
			            <%= link_to "Draft Lists", :controller => 'draft_lists', :action => "index" %>
			        </li>
                    <li class="yuimenubaritem">
						<%= link_to "Account", edit_user_registration_path %>
                    </li>
                    
                    <li class="yuimenubaritem">
                        <%= link_to "Messages", root_path %>
                    </li>
                    
                    <% if (!current_user.nil? && current_user.is_administrator)%>
                    <li class="yuimenubaritem">Admin
                        <div id="admin" class="yuimenu">
                            <div class="bd">
                                <ul>
									<li class="yuimenuitem">
				                        <%= link_to "Leagues", :controller => 'leagues', :action => 'index' %>
				                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Race Results', 
											:controller => 'race_results', :action => 'index'%>
                                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Cars', :controller => 'cars', :action => 'index'%>
                                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Races', :controller => 'races', :action => 'index'%>
                                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Tracks', :controller => 'tracks', :action => 'index'%>
                                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Preseason Rankings', 
											:controller => 'preseason_rankings', :action => 'index'%>
                                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Owned Stables', 
											:controller => 'owned_stables', :action => 'index'%>
                                    </li>
                                    <li class="yuimenuitem">
                                        <%= link_to 'Race Stables', 
											:controller => 'race_stables', :action => 'index'%>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>


                    <% end %>
					<li class="yuimenubaritem help-right">
						<%= link_to "Infield Care Center (Help)", :controller => 'help', :action => 'index'%>
					</li>
                </ul>
            </div>        
        </div>
        <% end %>

		<!-- Error reporting status bar section -->

        <% if !flash[:error].nil? %>
            <div id="flashError"><%= flash[:error] %></div><p>
        <% elsif !flash[:notice].nil? %>
            <div id="flashNotice"><%= flash[:notice] %></div><p>
	    <% elsif !flash[:alert].nil? %>
		            <div id="flashNotice"><%= flash[:alert] %></div>
        <% else %>
            <div id="flashEmpty">&nbsp;</div>
        <% end %>        
       
        <!-- Rendering the main content of the page -->
       
		<div id="mainContent">
			<%= yield %>	
		</div>

        <br style="clear:both;" />
		
		<div id="footer">
			&copy; 2010<%= "-" << Time.now.year.to_s if Time.now.year != 2010 %> JP Slavinsky, Dustin Smith
		</div>

        <%= debug(session) if false %>

	</div>

</body>
</html>

