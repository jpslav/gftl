<div id="sectionHeading">Basic List Info</div>
<%= form_for(@draft_list) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :rows => 4 %>
  </p>
  <p>
    <%= f.submit 'Update List Info' %>
  </p>
<% end %>

